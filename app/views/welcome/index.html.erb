<div id='wrapper'>
  <header>

  </header>
  <div class='row game'>
    <h1>Say My Name</h1>
    <div class= 'col-lg-10 row-of-pictures pull-left'>
      <% @shuffled_students.each do |student| %>
      <div id='<%=student.name%>' class= 'col-lg-4 picture-on picture-off picture'>
        <%= image_tag("#{student.name}.jpg") %>
        <form class="form-inline" role="form">
          <input class="form-control" id='name-input' placeholder="Say My Name"></input>
          <li class="btn btn-primary guess">Guess</button>
        </form>
      </div>
      <% end %>
    </div>

    <div class='name-bank panel panel-primary pull-right'>
      <div class= 'panel-heading'>Name Bank</div>
        <div class='panel-body'>
        <% @shuffled_students.shuffle.each do |student| %>
          <li><%= student.name.capitalize %></li>
        <% end %>
        </div>
    </div>
  </div>
</div>
